# Self-Hosting Environment Configuration
# Copy this file to .env.selfhost and update the values

NODE_ENV=production
PORT=3000

# Database Configuration (Local PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=workforce_management
DB_USER=wfm_user
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration (Local Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long
SESSION_SECRET=your_super_secure_session_secret_minimum_32_characters

# Application Configuration
DEFAULT_TIMEZONE=Asia/Singapore
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Workforce Management <your-email@gmail.com>

# Optional: Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Optional: SSL Configuration (if using nginx with SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem 